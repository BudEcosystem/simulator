# BudSimulator Environment Configuration Template
# Copy this file to .env and fill in your values

# LLM Provider Configuration
# Options: openai, anthropic, ollama, custom
LLM_PROVIDER=openai

# API Key (required for OpenAI, Anthropic)
LLM_API_KEY=your-api-key-here

# Model Name
# OpenAI: gpt-3.5-turbo, gpt-4, gpt-4-turbo-preview
# Anthropic: claude-3-opus-20240229, claude-3-sonnet-20240229
# Ollama: llama2, mistral, codellama
LLM_MODEL=gpt-4

# API URL (customize for Ollama or custom providers)
# OpenAI: https://api.openai.com/v1/chat/completions
# Anthropic: https://api.anthropic.com/v1/messages
# Ollama: http://localhost:11434
LLM_API_URL=https://api.openai.com/v1/chat/completions

# Application Configuration
APP_ENV=development
APP_DEBUG=true

# Database Configuration (optional - uses default if not set)
# DB_PATH=~/.genz_simulator/db/models.db

# Server Configuration (optional)
# BACKEND_PORT=8000
# FRONTEND_PORT=3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=budsimulator.log 